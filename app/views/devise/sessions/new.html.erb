<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a><b>Iniciar </b>Sesion</a>
  </div>
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Inserta tus Credenciales para ingresar al Sistema</p>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <label for="email">Email</label>
          <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: false,
                          input_html: { autocomplete: "email", class: "form-control", placeholder: "Email"} %>
          </div>
          <label for="password">Contraseña</label>
          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        label: false,
                        input_html: { autocomplete: "current-password", class: "form-control", placeholder: "contraseña"} %>
          </div>
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary d-inline">
                <%= f.input :remember_me, as: :boolean, type: "checkbox", id: "remember" if devise_mapping.rememberable? %>
              </div>
            </div>
            <div class="col-4">
            </div>
            <div class="col-4">
            </div>
            <div class="col-4">
                <%= f.button :submit, "Ingresar", class: "btn btn-primary btn-block btn-flat"  %>
            </div>
          </div>
        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>
    <% end %>
  </div>
</div>
</body>
</html>
