<div class="register-box">
    <div class="register-logo"><b>Registrate</b>Aqui</div>
      <div class="card">
        <div class="card-body register-card-body">
          <p class="login-box-msg">*Advertencia: Asegurese de Llenar todos los campos</p>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
               <%= f.error_notification %>

                <div class="form-group">
                  <%= f.input :nombre,required: true,autofocus: true,placeholder: "Escriba su nombre Completo",input_html: { autocomplete: "nombre", class: "form-control"}%>
                </div>
                <div class="form-group">
                  <%= f.input :email,required: true,autofocus: true,placeholder: "Escriba su Correo Electronico",input_html: { autocomplete: "email", class: "form-control"}%>
                </div>
                <div class="form-group">
                  <%= f.input :telefono,required: true,autofocus: true,placeholder: "Escriba su Numero de Telefono",input_html: { autocomplete: "telefono", class: "form-control"}%>
                </div>
                <div class="form-group">
                  <%= f.input :password,required: true,label: "Contraseña",placeholder: "Minimo seis (6) Digitos",hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),input_html: { autocomplete: "new-password", class: "form-control" } %>
                </div>
                <div class="form-group">
                  <%= f.input :password_confirmation,required: true,label: "Confirmar Contraseña",placeholder: "Confirme su Contraseña",input_html: { autocomplete: "new-password", class: "form-control" } %>
                </div>
                <div class="form-group">
                    <%= f.input :perfil, class: "form-control"%>
                </div>
                <div class="row">
                    <div class="col-8">
                      <div class="icheck-primary">
                        <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                        <label for="agreeTerms">Acepto  <a href="#">los terminos</a></label>
                      </div>
                    </div>
                    <div class="col-4"><%= f.button :submit, "Registrar", class:"btn btn-primary btn-block btn-flat"%></div>
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-4">
         <%end%>
                </div>
              <div class="col-md-4"></div>
        </div>
    </div>
</div>
