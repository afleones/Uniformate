<div class="row">

  <div class="col-md-4">

  </div>

  <div class="col-md-4">

    <%= simple_form_for(@talla) do |f| %>
      <% @talla.errors.full_messages.each do |message| %>
        <div class="form-group text-center be-red white">
        * <%= message %>
        </div>
      <%end%>
      <div class="form-group">
        <label for="exampleInputEmail1">Nombre</label>
          <%= f.text_field :nombre,required: true,autofocus: true,input_html: {placeholder: "Titulo"}, class:'form-control'%>
      </div>
        <div class="form-group text-center">
            <%= f.submit "Guardar Cambios", class:"btn btn-outline-primary btn-lg btn-block" %>
        </div>
    <%end%>

  </div>

  <div class="col-md-4">

  </div>

</div>
