<div class="conta">
<div class="row">
  <div class="col-md-12">
    <div class="col-md-3">
    </div>
    <div class="col-md-5">
      <%= simple_form_for @categoria, html: { class: 'form-horizontal' } do |f| %>
      <div class="row">
        <div class="col-md-12">
            <%= f.input :nombre, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
            <%= f.input :foto, input_html: {class: "form-control input-lg"} %>
        </div>
      </div><br>
        <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
              <%= f.submit "Guardar Cambios", class:"btn btn-success" %>
          </div>
          <div class="col-md-4">
          </div>
        </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>
