<div class="col-md-1"></div>
      <div class="col-md-10">
        <% breadcrumb :articulo_show, @articulo %>
          <h1 class="text-center"><%= @articulo.nombre %></h1>
              <div class="form-group">
                <form>
                  <div class="row">
                    <div class="col-md-2">
                        <h2>Codigo:</h2><%= @articulo.codigo%>
                          <br><br><%= link_to "Editar Articulo", edit_articulo_path(@articulo) , class:"btn btn-warning"%><br><br>
                      </div>
                      <div class="col-md-2">
                          <h2>Nombre:</h2>
                            <%= @articulo.nombre %>
                      </div>
                      <div class="col-md-2">
                        <h2>Cantidad: </h2>
                              <%= @articulo.cantidad %>
                      </div>
                      <div class="col-md-2">
                        <h2>Precio:</h2>
                              <%= @articulo.valor %>
                      </div>
                      <div class="col-md-2">
                            <h2>Categoria:</h2>
                            <%= @articulo.categoria.nombre %>
                            <br><br><%= link_to "Ir A Categorias", categorias_path(@categoria) , class:"btn btn-success"%>
                      </div>
                    </div>
                      <br>
                </form>
            </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <%= link_to "<--volver", articulos_path(@articulo) , class:"btn btn-primary" %>
        </div>
      </div>
      <br>
<div class="col-md-1"></div>
