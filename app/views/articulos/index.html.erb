<% if signed_in? %>
<div class="table-responsive">
  <% breadcrumb :articulos %>
  <h1 class="text-center">Articulos</h1>
      <table class="table table-striped">
        <tr>
          <th class="active">Id</th>
          <th class="active">Codigo</th>
          <th class="active">Nombre</th>
          <th class="active">Cantidad</th>
          <th class="active">Precio</th>
          <th class="active">Estado</th>
        </tr>
        <% @articulos.each do |articulo| %>
            <tr>
              <td><%= link_to articulo.id , articulo_path(articulo.id)%></td>
              <td><%= link_to articulo.codigo , articulo_path(articulo.id)%></td>
              <td><%= link_to articulo.nombre , articulo_path(articulo.id)%></td>
              <td><%= link_to articulo.cantidad , articulo_path(articulo.id)%></td>
              <td><%= link_to articulo.valor , articulo_path(articulo.id)%></td>
              <td><%= articulo.estado ? "Activo" : "Inactivo"%></td>
        <%end%>
            </tr>
      </table>

<%end%>
      <%if current_user.has_role? :admin%>
        <%= link_to "Crear Articulo", new_articulo_path(@articulo) , class:"btn btn-success btn-lg" %>
    <%end%>
</div>
