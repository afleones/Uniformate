
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <%= simple_form_for(@articulo) do |f| %>
      <% @articulo.errors.full_messages.each do |message| %>
        <div class="form-group text-center be-red white">
        * <%= message %>
        </div>
      <%end%>
        <div class="form-group has-success">
          <label for="exampleInputEmail1">Codigo<%= f.number_field  :nombre,required: true,autofocus: true,input_html: {placeholder: "Titulo"}, class:'form-control'%></label>
        </div>
        <div class="form-group has-success">
            <label for="exampleInputEmail1">Nombre<%= f.text_field  :nombre,required: true,autofocus: true,input_html: {placeholder: "Codigo Del Articulo"}, class:'form-control'%></label>
        </div>
        <div class="form-group has-success">
            <label for="exampleInputEmail1">Precio<%= f.number_field  :nombre,required: true,autofocus: true,input_html: {placeholder: "Nombre Del Articulo"}, class:'form-control'%></label>
        </div>
        <div class="form-group has-success">
            <label for="exampleInputEmail1">Existencia<%= f.number_field  :nombre,required: true,autofocus: true,input_html: {placeholder: "Cantidad Existente"}, class:'form-control'%></label>
        </div>
        <div class="form-group has-success">
            <label for="exampleInputEmail1">Categoria<%= f.text_field  :nombre,required: true,autofocus: true,input_html: {placeholder: "Titulo"}, class:'form-control'%></label>
            <%= f.association :categoria, label_method: :nombre, value_method: :id , input_html: {class: "input-lg", min:"1" } %>
        </div>
        <div class="form-group has-success">
            <label for="exampleInputEmail1">Talla<%= f.text_field  :nombre,required: true,autofocus: true,input_html: {placeholder: "Titulo"}, class:'form-control'%></label>
        </div>
        <div class="form-group">
            <%= f.submit "Registrar Articulo", class:"btn btn-warning" %>
        </div>
  <%end%>
  </div>
  <div class="col-md-4">
  </div>
